{
  "name": "mynta-stratum",
  "version": "1.2.2",
  "description": "KAWPoW Stratum Proxy for Mynta Solo Mining",
  "main": "start.js",
  "bin": "start.js",
  "author": "Mynta Core Developers",
  "license": "MIT",
  "pkg": {
    "targets": ["node22-win-x64"],
    "assets": [
      "libs/**/*",
      "node_modules/**/*.node",
      "node_modules/@mintpond/hasher-kawpow/**/*"
    ]
  },
  "scripts": {
    "start": "node start.js",
    "build": "pkg . --targets node22-win-x64 --output mynta-stratum.exe",
    "build:linux": "pkg . --targets node22-linux-x64 --output mynta-stratum-linux",
    "test": "node test/run-tests.js",
    "test:unit": "node test/run-tests.js --unit",
    "test:integration": "node test/run-tests.js --integration",
    "test:windows": "node test/run-tests.js --windows",
    "test:verbose": "node test/run-tests.js --verbose",
    "test:ci": "node test/run-tests.js --all",
    "test:binary": "node test/windows/binary-tests.js",
    "test:all-win": "npm run build && npm run test && npm run test:binary",
    "docker:build-test": "docker build -t mynta-stratum-wintest -f test/docker/Dockerfile.windows-test .",
    "docker:test": "docker run --rm -v $(pwd):/app mynta-stratum-wintest bash -c 'cd /app && npm install && npm run test:all-win'"
  },
  "dependencies": {
    "@mintpond/hasher-kawpow": "git+https://github.com/LabyrinthCore/kawpow-hasher",
    "@mintpond/mint-bitcoin-script": "git+https://github.com/MintPond/mint-bitcoin-script",
    "@mintpond/mint-merkle": "git+https://github.com/MintPond/mint-merkle",
    "@mintpond/mint-precon": "git+https://github.com/MintPond/mint-precon",
    "@mintpond/mint-socket": "git+https://github.com/MintPond/mint-socket",
    "@mintpond/mint-utils": "git+https://github.com/MintPond/mint-utils",
    "@mintpond/mint-bos": "git+https://github.com/MintPond/mint-bos",
    "sha3": "2.1.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MyntaProject/mynta-stratum.git"
  },
  "bugs": {
    "url": "https://github.com/MyntaProject/mynta-stratum/issues"
  },
  "homepage": "https://github.com/MyntaProject/mynta-stratum#readme",
  "keywords": [
    "mynta",
    "kawpow",
    "stratum",
    "mining",
    "solo-mining",
    "cryptocurrency"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "mocha": "^10.2.0"
  }
}
